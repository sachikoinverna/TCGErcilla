<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TCGErcilla.Views.GestionTipoProductosView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:info="clr-namespace:TCGErcilla.Info"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    Title=""
    x:DataType="viewmodels:GestionTiposProductoViewModel"
    BackgroundImageSource="fondo_tipos_de_producto.jpg"
    BindingContext="{viewmodels:GestionTiposProductoViewModel}">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding GetTiposProductoCommand}" EventName="Loaded" />
        <toolkit:EventToCommandBehavior Command="{Binding EstadoInicialCommand}" EventName="Loaded" />

    </ContentPage.Behaviors>
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Button
            Margin="0,10"
            Command="{Binding CrearTipoProductoCommand}"
            Style="{StaticResource ButtonStyleCrearTiposProductosGestionTiposProductos}" />
        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Frame Style="{StaticResource FrameTiposProductosGestionTiposProductosStyle}">

                <StackLayout
                    Margin="30"
                    HorizontalOptions="Center"
                    Orientation="Vertical"
                    Style="{StaticResource StackLayoutTiposProductosGestionTiposProductosStyle}">

                    <Image
                       Style="{StaticResource ImageTiposProductoTitleStyle}"/>
                    <Frame Style="{StaticResource FrameCollectionViewTiposProductosGestionTiposProductoStyle}">

                        <CollectionView
                            Margin="10"
                            HeightRequest="350"
                            ItemsSource="{Binding ListaTiposProducto}"
                            SelectedItem="{Binding SelectedTipoProductoInfo}"
                            SelectionChangedCommandParameter="{Binding Source={x:Reference}}"
                            SelectionMode="Single"
                            WidthRequest="300">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="info:TipoProductoInfo">
                                    <Frame Style="{StaticResource FrameCollectionViewObjectTiposProductosGestionTipoProductoStyle}" >
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer
                                                x:DataType="viewmodels:GestionTiposProductoViewModel"
                                                BindingContext="{Binding Source={x:Reference}, Path=BindingContext}"
                                                Command="{Binding EditarTipoProductoCommand}"
                                                NumberOfTapsRequired="2" />
                                        </Frame.GestureRecognizers>
                                        <HorizontalStackLayout>
                                            <VerticalStackLayout Margin="10">
                                                <Label Text="{Binding Tipo}" />
                                            </VerticalStackLayout>

                                        </HorizontalStackLayout>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal" />
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="LightBlue" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>


                        </CollectionView>
                    </Frame>
                    <Button
                        Command="{Binding MostrarProductosCommand}"
                        IsEnabled="{Binding IsProductosVisible, Converter={toolkit:InvertedBoolConverter}}"
                        Style="{StaticResource ButtonStyleMostrarProductosGestionTiposProductos}" />
                    <Button
                        Command="{Binding OcultarProductosCommand}"
                        IsEnabled="{Binding IsProductosVisible}"
                        Style="{StaticResource ButtonStyleOcultarProductosGestionTiposProductos}" />
                    <Button
                        Command="{Binding GetTiposProductoCommand}"
                        IsEnabled="{Binding IsReportesVisible, Converter={toolkit:InvertedBoolConverter}}"
                        Text="Mostrar reportes" />
                    <Button
                        Command="{Binding OcultarInformeCommand}"
                        IsEnabled="{Binding IsReportesVisible}"
                        Text="Ocultar reportes" />
                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding IsProductosVisible}" Style="{StaticResource FrameProductosGestionTiposProductosStyle}">
                <StackLayout IsVisible="{Binding IsProductosVisible}" Style="{StaticResource StackLayoutProductosGestionTiposProductosStyle}">
                    <Image
                        Style="{StaticResource ImageProductosTitleStyle}" />
                    <Frame
                        IsVisible="{Binding IsProductosVisible}"
                        Style="{StaticResource FrameCollectionViewProductosGestionTiposProductoStyle}"
                        WidthRequest="350">

                        <CollectionView
                            Margin="10"
                            HeightRequest="350"
                            ItemsSource="{Binding ListaProductos}"
                            SelectionMode="Single"
                            WidthRequest="300">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="info:ProductoInfo">
                                    <Frame Style="{StaticResource FrameCollectionViewObjectProductosGestionTipoProductoStyle}" >
                                        <HorizontalStackLayout>
                                            <VerticalStackLayout Margin="10">
                                                <Label Text="{Binding Nombre}" />
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal" />
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="LightBlue" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>


                        </CollectionView>
                    </Frame>
                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding IsReportesVisible}" Style="{StaticResource FrameCartasGestionCartasStyle}">

                <StackLayout
                    Margin="30"
                    HorizontalOptions="Start"
                    IsVisible="{Binding IsReportesVisible}"
                    Orientation="Vertical"
                    Style="{StaticResource StackLayoutCartasGestionCartasStyle}">
                    <Frame
                        BackgroundColor="#f2fdf8"
                        BorderColor="#5193d8"
                        IsVisible="{Binding IsReportesVisible}"
                        WidthRequest="350">
                        <material:TabView>

                            <material:TabItem Title="Tab One">
                                <material:TabItem.ContentTemplate>
                                    <DataTemplate>
                                        <StackLayout Margin="5" Orientation="Horizontal">
                                            <Entry
                                                Placeholder="Correo"
                                                Text="{Binding FiltroCorreo}"
                                                WidthRequest="200" />
                                            <Button
                                                Margin="5"
                                                Command="{Binding GetPDFCommand}"
                                                Text="BUSCAR" />
                                        </StackLayout>
                                    </DataTemplate>
                                </material:TabItem.ContentTemplate>
                            </material:TabItem>


                            <material:TabItem Title="Tab Two">
                                <material:TabItem.ContentTemplate>
                                    <DataTemplate>
                                        <Label Text="Second Tab" />
                                    </DataTemplate>
                                </material:TabItem.ContentTemplate>
                            </material:TabItem>

                            <material:TabItem Title="Tab Three">
                                <material:TabItem.ContentTemplate>
                                    <DataTemplate>
                                        <Label Text="Third Tab" />
                                    </DataTemplate>
                                </material:TabItem.ContentTemplate>
                            </material:TabItem>
                        </material:TabView>



                    </Frame>
                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding IsReportesVisible}" Style="{StaticResource FrameCartasGestionCartasStyle}">

                <!--  CONTENEDOR PARA EL VISOR PDF  -->
                <StackLayout
                    Margin="20"
                    BackgroundColor="WhiteSmoke"
                    HeightRequest="550"
                    IsVisible="{Binding IsReportesVisible}"
                    Orientation="Vertical"
                    WidthRequest="550">

                    <StackLayout.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity=".7"
                            Radius="20"
                            Offset="10,10" />
                    </StackLayout.Shadow>
                    <WebView
                        Margin="10"
                        HeightRequest="500"
                        Source="{Binding UrlPDF}"
                        WidthRequest="500" />
                </StackLayout>
            </Frame>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>