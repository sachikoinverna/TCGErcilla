<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TCGErcilla.Views.GestionCartasView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimage="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:info="clr-namespace:TCGErcilla.Info"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    x:Name="gestion_cartas"
    Title=""
    x:DataType="viewmodels:GestionCartasViewModel"
    BackgroundImageSource="fondo_cartas.jpg"
    BindingContext="{viewmodels:GestionCartasViewModel}">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding GetCartasCommand}" EventName="Loaded" />
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <Button
            Margin="0,10"
            Command="{Binding CrearCartaCommand}"
            FontAttributes="Bold"
            FontSize="28"
            Style="{StaticResource ButtonStyleCrearCartasGestionCartas}"
            Text="Crear carta"
            WidthRequest="300" />
        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Frame Style="{StaticResource FrameCartasGestionCartasStyle}">

                <StackLayout
                    Margin="30"
                    HorizontalOptions="Start"
                    Orientation="Vertical"
                    Style="{StaticResource StackLayoutCartasGestionCartasStyle}">
                    <Image
                        Style="{StaticResource ImageCartasTitleStyle}" />
                    <Frame Style="{StaticResource FrameCollectionViewCartasGestionCartasStyle}">
                        <CollectionView
                            Margin="10"
                            HeightRequest="350"
                            HorizontalOptions="Center"
                            ItemsSource="{Binding ListaCartas}"
                            SelectedItem="{Binding SelectedCarta}"
                            SelectionChangedCommandParameter="{Binding Source={x:Reference gestion_cartas}}"
                            SelectionMode="Single"
                            VerticalOptions="Center"
                            WidthRequest="300">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="info:CartaInfo">
                                    <Frame Style="{StaticResource FrameCollectionViewObjectCartasGestionCartasStyle}" >
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer
                                                x:DataType="viewmodels:GestionCartasViewModel"
                                                BindingContext="{Binding Source={x:Reference gestion_cartas}, Path=BindingContext}"
                                                Command="{Binding CrearCartaCommand}"
                                                CommandParameter="{Binding SelectedCarta}"
                                                NumberOfTapsRequired="2" />
                                        </Frame.GestureRecognizers>
                                        <HorizontalStackLayout>
                                            <ffimage:CachedImage
                                                Aspect="AspectFill"
                                                ErrorPlaceholder="carta_default.png"
                                                Source="{Binding UrlImagen}"
                                                WidthRequest="50" />
                                            <VerticalStackLayout Margin="10">
                                                <Label Text="{Binding Nombre}" />
                                                <Label Text="{Binding NumeroColeccion}" />
                                            </VerticalStackLayout>

                                        </HorizontalStackLayout>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal" />
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="LightBlue" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>


                        </CollectionView>


                    </Frame>
                    <Button
                        Command="{Binding MostrarColeccionCommand}"
                        IsVisible="{Binding IsColeccionInfoVisible, Converter={toolkit:InvertedBoolConverter}}"
                        Text="Mostrar detalles de la coleccion" />
                    <Button
                        Command="{Binding MostrarInformesCommand}"
                        IsVisible="{Binding IsReportsVisible, Converter={toolkit:InvertedBoolConverter}}"
                        Text="Mostrar informe" />
                    <Button
                        Command="{Binding OcultarColeccionCommand}"
                        IsVisible="{Binding IsColeccionInfoVisible}"
                        Text="Ocultar detalles de la coleccion" />
                    <Button
                        Command="{Binding OcultarReportsCommand}"
                        IsVisible="{Binding IsReportsVisible}"
                        Text="Ocultar informe" />
                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding IsColeccionInfoVisible}" Style="{StaticResource FrameCartasGestionCartasStyle}">

                <StackLayout
                    Margin="30"
                    HeightRequest="600"
                    HorizontalOptions="Start"
                    IsVisible="{Binding IsColeccionInfoVisible}"
                    Orientation="Vertical"
                    Style="{StaticResource StackLayoutCartasGestionCartasStyle}"
                    WidthRequest="300">
                    <Image
                        Style="{StaticResource ImageCartasTitleStyle}"/>
                    <Frame
                        BackgroundColor="#f2fdf8"
                        BorderColor="#5193d8"
                        IsVisible="{Binding IsColeccionInfoVisible}"
                        WidthRequest="350">
                        <Label Text="{Binding SelectedCarta.Nombre}" />
                    </Frame>
                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding IsReportsVisible}" Style="{StaticResource FrameCartasGestionCartasStyle}">

                <StackLayout
                    Margin="30"
                    HorizontalOptions="Start"
                    IsVisible="{Binding IsReportsVisible}"
                    Orientation="Vertical"
                    Style="{StaticResource StackLayoutCartasGestionCartasStyle}">
                    <Frame
                        BackgroundColor="#f2fdf8"
                        BorderColor="#5193d8"
                        IsVisible="{Binding IsReportsVisible}"
                        WidthRequest="350">
                        <material:TabView>

                            <material:TabItem Title="Tab One">
                                <material:TabItem.ContentTemplate>
                                    <DataTemplate>
                                        <StackLayout Margin="5" Orientation="Horizontal">
                                            <Entry
                                                Placeholder="Correo"
                                                Text="{Binding FiltroCorreo}"
                                                WidthRequest="200" />
                                            <Button
                                                Margin="5"
                                                Command="{Binding GetPDFCommand}"
                                                Text="BUSCAR" />
                                        </StackLayout>
                                    </DataTemplate>
                                </material:TabItem.ContentTemplate>
                            </material:TabItem>


                            <material:TabItem Title="Tab Two">
                                <material:TabItem.ContentTemplate>
                                    <DataTemplate>
                                        <Label Text="Second Tab" />
                                    </DataTemplate>
                                </material:TabItem.ContentTemplate>
                            </material:TabItem>

                            <material:TabItem Title="Tab Three">
                                <material:TabItem.ContentTemplate>
                                    <DataTemplate>
                                        <Label Text="Third Tab" />
                                    </DataTemplate>
                                </material:TabItem.ContentTemplate>
                            </material:TabItem>
                        </material:TabView>



                    </Frame>
                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding IsReportsVisible}" Style="{StaticResource FrameCartasGestionCartasStyle}">

                <!--  CONTENEDOR PARA EL VISOR PDF  -->
                <StackLayout
                    Margin="20"
                    BackgroundColor="WhiteSmoke"
                    HeightRequest="550"
                    IsVisible="{Binding IsReportsVisible}"
                    Orientation="Vertical"
                    WidthRequest="550">

                    <WebView
                        Margin="10"
                        HeightRequest="500"
                        Source="{Binding UrlPDF}"
                        WidthRequest="500" />
                </StackLayout>
            </Frame>

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>