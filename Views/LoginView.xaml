<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TCGErcilla.Views.LoginView"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    x:DataType="viewmodels:LoginViewModel"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled"
    BindingContext="{viewmodels:LoginViewModel}">
    <Grid RowDefinitions="*, Auto">
        <!-- WebView ocupa toda la pantalla -->
        <WebView 
            Grid.Row="0"
            Source="{Binding UrlWeb}"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <WebView.Behaviors>
                <toolkit:EventToCommandBehavior
                    EventName="Loaded"
                    Command="{Binding GetLoginWebCommand}" />
            </WebView.Behaviors>
        </WebView>

        <!-- BotÃ³n debajo del WebView -->
        <Button 
            Grid.Row="1"
            Text="Ir a Main"
            Command="{Binding MostrarMainPageCommand}" />
    </Grid>
</ContentPage>