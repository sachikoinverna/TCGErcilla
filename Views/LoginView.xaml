<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TCGErcilla.Views.LoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    x:DataType="viewmodels:LoginViewModel"
    BindingContext="{viewmodels:LoginViewModel}"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="*, Auto">
        <!--  WebView ocupa toda la pantalla  -->
        <WebView  Grid.Column="0" x:Name="navigator" Source="http://www.google.es" WidthRequest="300" HeightRequest="500">
            <WebView.Behaviors>
                <toolkit:EventToCommandBehavior EventName="Navigated" Command="{Binding NavigatedCommand }" 
                                                CommandParameter="{Binding Source={x:Reference navigator}}"
                                                BindingContext="{Binding Source={x:Reference login_popup}, Path=BindingContext}"/>
            </WebView.Behaviors>
        </WebView>

        <!--  BotÃ³n debajo del WebView  -->
        <Button
            Grid.Row="1"
            Command="{Binding MostrarMainPageCommand}"
            Text="Ir a Main" />
    </Grid>
</ContentPage>