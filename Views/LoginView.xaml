<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TCGErcilla.Views.LoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    x:Name="login_view"
    x:DataType="viewmodels:LoginViewModel"
    BindingContext="{viewmodels:LoginViewModel}"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">
    <Grid RowDefinitions="*, Auto">
        <!--  WebView ocupa toda la pantalla  -->
        <WebView
            x:Name="navegador"
            Grid.Column="0"
            Source="http://192.168.20.102:5001/form_login">
            <WebView.Behaviors>
                <toolkit:EventToCommandBehavior
                    BindingContext="{Binding Source={x:Reference login_view}, Path=BindingContext}"
                    Command="{Binding NavigatedCommand}"
                    CommandParameter="{Binding Source={x:Reference navegador}}"
                    EventName="Navigated" />
            </WebView.Behaviors>
        </WebView>

        <!--  BotÃ³n debajo del WebView  -->
        <Button
            Grid.Row="1"
            Command="{Binding MostrarMainPageCommand}"
            Text="Ir a Main" />
    </Grid>
</ContentPage>