<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TCGErcilla.Views.GestionDistribuidoresView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:info="clr-namespace:TCGErcilla.Info"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    x:Name="gestion_distribuidores"
    Title=""
    xmlns:ffimage="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    x:DataType="viewmodels:GestionDistribuidoresViewModel"
    BindingContext="{viewmodels:GestionDistribuidoresViewModel}">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding GetDistribuidoresCommand}" EventName="Loaded" />
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <Button
            Margin="0,10"
            BackgroundColor="MidnightBlue"
            Command="{Binding AbrirMopupDistribuidorCommand}"
            CornerRadius="0"
            FontAttributes="Bold"
            FontSize="28"
            Text="Crear distribuidor"
            WidthRequest="300" />
        <VerticalStackLayout
            Margin="30"
            Background="WhiteSmoke"
            HeightRequest="650"
            HorizontalOptions="Start"
            WidthRequest="350">

            <VerticalStackLayout.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity=".7"
                    Radius="10"
                    Offset="10,10" />
            </VerticalStackLayout.Shadow>

            <Image
                Margin="0,20,0,0"
                HeightRequest="100"
                HorizontalOptions="Center"
                Source="distribuidores_titulo.png"
                VerticalOptions="Center"
                WidthRequest="100" />

            <CollectionView
                Margin="10"
                Background="LightGray"
                HeightRequest="350"
                ItemsSource="{Binding ListaDistribuidores}"
                SelectedItem="{Binding SelectedDistribuidor}"
                SelectionMode="Single"
                WidthRequest="300">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="info:DistribuidorInfo">
                        <Border WidthRequest="280">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    x:DataType="viewmodels:GestionDistribuidoresViewModel"
                                    BindingContext="{Binding Source={x:Reference gestion_distribuidores}, Path=BindingContext}"
                                    Command="{Binding AbrirMopupDistribuidorCommand}"
                                    NumberOfTapsRequired="2" />
                            </Border.GestureRecognizers>
                            <HorizontalStackLayout>
                                <VerticalStackLayout Margin="10">
                                    <Label Text="{Binding Id}" />
                                    <Label Text="{Binding Nombre}" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal" />
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="LightBlue" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>


            </CollectionView>
            <Button
                Margin="0,10"
                BackgroundColor="MidnightBlue"
                Command="{Binding EditarDistribuidorCommand}"
                CornerRadius="0"
                FontAttributes="Bold"
                FontSize="28"
                Text="Editar"
                WidthRequest="300" />
            <Button
                Margin="0,10"
                BackgroundColor="MidnightBlue"
                Command="{Binding EliminarDistribuidorCommand}"
                CornerRadius="0"
                FontAttributes="Bold"
                FontSize="28"
                Text="Eliminar"
                WidthRequest="300" />
        </VerticalStackLayout>
        <Frame BorderColor="DeepSkyBlue" CornerRadius="20" Padding="10" BackgroundColor="AliceBlue" HasShadow="false">
            <VerticalStackLayout BackgroundColor="AliceBlue" IsEnabled="{Binding IsCartasVisible}">
                <Image
                Margin="0,20,0,0"
                HeightRequest="100"
                HorizontalOptions="Center"
                Source="cartas_titulo.png"
                VerticalOptions="Center"
                WidthRequest="100" />

                <CollectionView
                Margin="10"
                Background="LightGray"
                HeightRequest="350"
                ItemsSource="{Binding ListaCartas}"
                SelectedItem="{Binding SelectedCarta}"
                SelectionChangedCommandParameter="{Binding Source={x:Reference}}"
                SelectionMode="Single"
                WidthRequest="300">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="info:CartaInfo">
                            <Border WidthRequest="280">
                                <HorizontalStackLayout>
                                    <ffimage:CachedImage
                                    Aspect="AspectFill"
                                    ErrorPlaceholder="cartas_default.png"
                                    Source="{Binding UrlImagen}"
                                    WidthRequest="50" />
                                    <VerticalStackLayout Margin="10">
                                        <Label Text="{Binding Nombre}" />
                                    </VerticalStackLayout>

                                </HorizontalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>


                </CollectionView>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>