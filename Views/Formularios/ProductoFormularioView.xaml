<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="TCGErcilla.Views.Formularios.ProductoFormularioView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:ffimage="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    x:DataType="viewmodels:ProductoFormularioViewModel"
    BindingContext="{viewmodels:ProductoFormularioViewModel}">
    <VerticalStackLayout>
        <ImageButton Command="{Binding CerrarMopupCommand}" Style="{StaticResource ImageButtonClose}" />
        <input:FormView Spacing="20" SubmitCommand="{Binding CrearProductoCommand}">
            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="20"
                VerticalOptions="Center">
                <ffimage:CachedImage
                    ErrorPlaceholder="producto_default.png"
                    HeightRequest="130"
                    WidthRequest="130" />
                <Button
                    Margin="5"
                    Command="{Binding SeleccionarImagenCommand}"
                    Style="{StaticResource ButtonStyleSeleccionarImagen}" />
            </HorizontalStackLayout>
            <material:TextField
                Title="Nombre"
                AccentColor="DeepSkyBlue"
                AllowClear="True"
                Icon="{FontImageSource FontFamily=MaterialRegular,
                                       Glyph={x:Static m:MaterialRegular.Edit}}"
                Text="{Binding ProductoInfo.Nombre}">
                <validation:RequiredValidation />
            </material:TextField>
            <material:DropdownField
                Title="Pick an option"
                Icon="{FontImageSource FontFamily=MaterialRegular,
                                       Glyph={x:Static m:MaterialRegular.Expand_circle_down}}"
                ItemsSource="{Binding ListaColecciones}"
                SelectedItem="{Binding ProductoInfo}" />
            <material:DropdownField
                Title="Pick an option"
                Icon="{FontImageSource FontFamily=MaterialRegular,
                                       Glyph={x:Static m:MaterialRegular.Expand_circle_down}}"
                ItemsSource="{Binding ListaColecciones}"
                SelectedItem="{Binding ColeccionInfo}" />
            <material:MultiplePickerField
                Title="Pick some options"
                AccentColor="DeepSkyBlue"
                Icon="{FontImageSource FontFamily=MaterialRegular,
                                       Glyph={x:Static m:MaterialRegular.Email}}"
                ItemsSource="{Binding ListaColecciones}" />
            <HorizontalStackLayout>
                <Button input:FormView.IsSubmitButton="True" IsVisible="{Binding IsEditMode, Converter={toolkit:InvertedBoolConverter}}" />
                <Button IsVisible="{Binding IsEditMode}" />
                <Button input:FormView.IsSubmitButton="True" IsVisible="{Binding IsEditMode}" />
            </HorizontalStackLayout>
        </input:FormView>

    </VerticalStackLayout>
</StackLayout>