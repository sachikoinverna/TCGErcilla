<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="TCGErcilla.Views.Formularios.ColeccionFormularioView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:ffimage="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    x:DataType="viewmodels:ColeccionFormularioViewModel"
    BindingContext="{viewmodels:ColeccionFormularioViewModel}">
    <VerticalStackLayout>
        <input:FormView Spacing="20" SubmitCommand="{Binding c}">

            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="20"
                VerticalOptions="Center">

                <ffimage:CachedImage
                    ErrorPlaceholder="coleccion_default.png"
                    HeightRequest="130"
                    Source="{Binding RutaImagen}"
                    WidthRequest="130" />
                <Button
                    Margin="5"
                    Command="{Binding SeleccionarImagenCommand}"
                    Text="Seleccionar imagen" />
            </HorizontalStackLayout>

            <material:TextField
                Title="Nombre"
                AllowClear="True"
                Icon="{FontImageSource FontFamily=MaterialRegular,
                                       Glyph={x:Static m:MaterialRegular.Email}}"
                Text="{Binding ColeccionInfo.Nombre}" />
            <material:TextField
                Title="Numero de cartas"
                AccentColor="DeepSkyBlue"
                AllowClear="True"
                Icon="{FontImageSource FontFamily=MaterialRegular,
                                       Glyph={x:Static m:MaterialRegular.Edit}}"
                Keyboard="Numeric"
                Text="{Binding ColeccionInfo.NumeroCartas}" />
            <material:DatePickerField
                Title="Fecha de lanzamiento"
                Date="{Binding ColeccionInfo.FechaLanzamiento}"
                Icon="{FontImageSource FontFamily=MaterialRegular,
                                       Glyph={x:Static m:MaterialRegular.Calendar_month}}" />
            <Button
                Command="{Binding CrearCartaCommand}"
                IsVisible="{Binding IsEditMode, Converter={toolkit:InvertedBoolConverter}}"
                Style="{StaticResource ButtonStyleCreate}" />
            <Button
                Command="{Binding CrearCartaCommand}"
                IsVisible="{Binding IsEditMode}"
                Style="{StaticResource ButtonStyleDelete}" />
            <Button
                Command="{Binding CrearCartaCommand}"
                IsVisible="{Binding IsEditMode}"
                Style="{StaticResource ButtonStyleCreate}" />
        </input:FormView>
    </VerticalStackLayout>
</StackLayout>