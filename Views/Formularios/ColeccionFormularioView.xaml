<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TCGErcilla.Views.Formularios.ColeccionFormularioView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:ffimage="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
    xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
    xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
    Title="ColeccionFormularioView"
    x:DataType="viewmodels:ColeccionFormularioViewModel"
    BindingContext="{viewmodels:ColeccionFormularioViewModel}">
    <VerticalStackLayout>
        <input:FormView Spacing="20" SubmitCommand="{Binding SubmitCommand}">

            <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">

                <ffimage:CachedImage
                ErrorPlaceholder="coleccion_default.jpg"
                HeightRequest="130"
                Source="{Binding RutaImagen}"
                WidthRequest="130" />
                <VerticalStackLayout Spacing="10" VerticalOptions="Center">
                    <Button
                    Margin="5"
                    Command="{Binding SeleccionarImagenCommand}"
                    Text="Seleccionar imagen" />
                    <Button
                    Margin="5"
                    Command="{Binding UploadImageCommand}"
                    Text="Subir" />
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <material:TextField
            Title="Nombre"
            AllowClear="True"
            Icon="{FontImageSource FontFamily=MaterialRegular,
                                   Glyph={x:Static m:MaterialRegular.Email}}" />
            <material:TextField
            Title="Numero de cartas"
            AccentColor="DeepSkyBlue"
            AllowClear="True"
            Icon="{FontImageSource FontFamily=MaterialRegular,
                                   Glyph={x:Static m:MaterialRegular.Edit}}"
            Keyboard="Numeric" />
            <material:DatePickerField Title="Fecha de lanzamiento" Icon="{FontImageSource FontFamily=MaterialRegular, Glyph={x:Static m:MaterialRegular.Calendar_month}}" />
        </input:FormView>
    </VerticalStackLayout>
</ContentPage>