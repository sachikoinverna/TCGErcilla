<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCGErcilla.Views.CartasView"
             xmlns:viewmodels="clr-namespace:TCGErcilla.ViewModels"
             x:DataType="viewmodels:CartaViewModel"
             BindingContext="{viewmodels:CartaViewModel}"
             xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
             Title="CartasView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Ir a crear carta" Command="{Binding GoCartaCrearCommand}"/>
    </VerticalStackLayout>
</ContentPage>