<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="TCGErcilla.Resources.Styles.ButtonsStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Button" x:Key="ButtonStyleDelete">
        <Setter Property="BackgroundColor" Value="Red"/>
        <Setter Property="BorderColor" Value="PaleVioletRed"/>
        <Setter Property="TextColor" Value="White"/>
    </Style>
    <Style TargetType="Button" x:Key="ButtonStyleCreate">
        <Setter Property="BackgroundColor" Value="Green"/>
        <Setter Property="BorderColor" Value="LawnGreen"/>
        <Setter Property="TextColor" Value="White"/>
    </Style>
</ResourceDictionary>