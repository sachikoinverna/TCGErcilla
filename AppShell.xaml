<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TCGErcilla.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TCGErcilla"
    xmlns:views="clr-namespace:TCGErcilla.Views"
    Title="TCGErcilla"
    Shell.TitleColor="AntiqueWhite"
    Shell.ForegroundColor="AliceBlue"
    Shell.TabBarBackgroundColor="Black"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="Aqua"
    FlyoutBackgroundColor="Red">
    <ShellContent
    Title="Login"
        x:Name="LoginPage"
    ContentTemplate="{DataTemplate views:LoginView}"
    Route="LoginView"/>
    <ShellContent
        Title="Home"
        Shell.TitleColor="White"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Cartas"
        x:Name="CartasView"
    ContentTemplate="{DataTemplate views:CartasView}"
    Route="CartasView"/>
    <ShellContent
        Title="Colecciones"
        Shell.TitleColor="White"
        ContentTemplate="{DataTemplate views:ColeccionesView}"
        Route="ColeccionesView"/>
    <ShellContent
    Title="Productos"
    Shell.TitleColor="White"
    ContentTemplate="{DataTemplate views:ProductosView}"
    Route="ColeccionesView"/>
</Shell>
